util-linux \
passwd \
cracklib-dicts \
hostname \
procps \
git \
vim \
dnf-plugins-core \
socat \
wget \
iproute \
glibc-langpack-en \
findutils \
iputils \
genisoimage \
python3-pip \
bzip2 \
xz


setcap 'cap_net_admin,cap_net_raw+ep' /usr/bin/ping

wget https://raw.githubusercontent.com/polachz/dotfiles/main/dot_bashrc.d/colours.sh -P /etc/profile.d

